---
layout: page
---
<div class="post">
  <article>

    <!-- Professors Section -->
    {% if page.professors %}
      <h2>Professors</h2>
      {% for profile in page.professors %}
        <hr>
        <div class="profile float-{% if profile.align == 'left' %}left{% else %}right{% endif %}">
          {% if profile.image %}
            {% assign profile_image_path = profile.image | prepend: 'assets/img/profile_pics/' %}
            {% if profile.image_circular %}
              {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
            {% else %}
              {% assign profile_image_class = 'img-fluid z-depth-1 rounded' %}
            {% endif %}
            <img src="{{ profile_image_path | relative_url }}" alt="Profile picture" class="{{ profile_image_class }}">
          {% endif %}
          {% if profile.more_info %}
            <div class="more-info">{{ profile.more_info }}</div>
          {% endif %}
        </div>

        <div class="clearfix">
          {% if profile.content %}
            {% capture profile_content %}{% include_relative {{ profile.content }} %}{% endcapture %}
            {{ profile_content | markdownify }}
          {% else %}
            {{ content }}
          {% endif %}
        </div>
      {% endfor %}
    {% endif %}

    <!-- Students Section -->
    {% if page.students %}
      <h2>Students</h2>
      <div class="row">
        {% for student in page.students %}
          <div class="col-6 col-sm-4 col-md-3 mb-4 text-center">
            {% assign image_path = student.image | prepend: 'assets/img/profile_pics/' %}
            {% assign image_class = student.image_circular == true | default: false
              | if true then 'img-fluid rounded-circle' else 'img-fluid rounded' %}
            <img src="{{ image_path | relative_url }}" class="{{ image_class }}" alt="Student image">
          </div>
        {% endfor %}
      </div>
    {% endif %}

    <!-- Alumni Section -->
    {% if page.alumni %}
      <h2>Alumni</h2>
      <div class="row">
        {% for alum in page.alumni %}
          <div class="col-6 col-sm-4 col-md-3 mb-4 text-center">
            {% assign image_path = alum.image | prepend: 'assets/img/profile_pics/' %}
            {% assign image_class = alum.image_circular == true | default: false
              | if true then 'img-fluid rounded-circle' else 'img-fluid rounded' %}
            <img src="{{ image_path | relative_url }}" class="{{ image_class }}" alt="Alumni image">
          </div>
        {% endfor %}
      </div>
    {% endif %}

  </article>
</div>
