---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {% if page.heading %}
        {{ page.heading }}
      {% elsif site.title == 'blank' %}
        <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }}
        {{ site.last_name }}
      {% else %}
        {{ site.title }}
      {% endif %}
    </h1>
    <p class="desc">{{ page.subtitle }}</p>
  </header>

  <article>
    {% if page.readings %}
      <h2>ğŸ“š Readings</h2>
      <div class="row">
        {% for item in page.readings %}
          <div class="col-6 col-sm-4 col-md-3 mb-4 text-center">
            {% if item.cover %}
              <img src="{{ item.cover | relative_url }}" alt="{{ item.title }} cover" class="img-fluid rounded shadow" style="height:200px">
            {% elsif item.olid %}
              <img src="https://covers.openlibrary.org/b/olid/{{ item.olid }}-L.jpg?default=false" alt="{{ item.title }} cover" class="img-fluid rounded shadow" style="height:200px">
            {% elsif item.isbn %}
              <img src="https://covers.openlibrary.org/b/isbn/{{ item.isbn }}-L.jpg?default=false" alt="{{ item.title }} cover" class="img-fluid rounded shadow" style="height:200px">
            {% endif %}
            <p class="mt-2 mb-0"><a href="{{ item.url }}" target="_blank"><strong>{{ item.title }}</strong></a></p>
            {% if item.description %}
              <small>{{ item.description }}</small>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}


    {% if page.movies %}
      <h2>ğŸ¬ Movies / Documentaries</h2>
      <ul>
        {% for item in page.movies %}
          <li>
            <a href="{{ item.url }}" target="_blank">{{ item.title }}</a>
            {% if item.description %} &mdash; {{ item.description }}{% endif %}
          </li>
        {% endfor %}
      </ul>
    {% endif %}

    {% if page.websites %}
      <h2>ğŸŒ Websites</h2>
      <ul>
        {% for item in page.websites %}
          <li>
            <a href="{{ item.url }}" target="_blank">{{ item.title }}</a>
            {% if item.description %} &mdash; {{ item.description }}{% endif %}
          </li>
        {% endfor %}
      </ul>
    {% endif %}

    {% if page.newsletters %}
      <h2>ğŸ“° Newsletters / Substacks</h2>
      <ul>
        {% for item in page.newsletters %}
          <li>
            <a href="{{ item.url }}" target="_blank">{{ item.title }}</a>
            {% if item.description %} &mdash; {{ item.description }}{% endif %}
          </li>
        {% endfor %}
      </ul>
    {% endif %}

    {% if page.misc %}
      <h2>ğŸ§° Miscellaneous</h2>
      <ul>
        {% for item in page.misc %}
          <li>
            <a href="{{ item.url }}" target="_blank">{{ item.title }}</a>
            {% if item.description %} &mdash; {{ item.description }}{% endif %}
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </article>
</div>
